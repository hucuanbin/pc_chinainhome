<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/styles.css" />
    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <title>JavaScript事件冒泡实例一</title>
    <style>
        #lunbo img {
            width: 300px;
            height: 300px;
            float: left;
        }

        #lunbo ul {
            overflow: auto;
            margin-left: -300px;
        }

        #lunbo li {
            float: left;
            width: 300px;
        }

        #lunbo b {
            position: absolute;
            top: 50%;
            z-index: 999;
            font-size: 23px;
            background: rgba(61,61,61,0.7);
            padding: 20px 5px;
            margin-top: -31px;
            color: #fff;
            cursor: pointer;
            display: none;
        }

        .yy_dian {
            position: absolute;
            bottom: 0px;
            background: rgba(17,17,17,0.6);
            height: 35px;
            z-index: 999;
            width: 100%;
            padding: 12px;
        }
        .big{
            width:8px !important;
            height:8px !important;
            background:#808080 !important;
        }
            .yy_dian span {
                display: inline-block;
                width: 5px;
                height: 5px;
                border-radius: 3px;
                background: #fff;
            }
    </style>
</head>
<body>

    <div style="overflow:hidden;width:300px !important;height:300px;position:relative;display:inline-block;" id="lunbo">
        <b class="glyphicon glyphicon-menu-left" style="left:0px;" id="left"></b>
        <ul style="width:900px;" id="huahua" data-data="0">
            <li>
                <img src="images/02.jpg" />
            </li>
            <li>
                <img src="images/04.jpg" />
            </li>
            <li>
                <img src="images/05.jpg" />
            </li>
        </ul>
        <p class="yy_dian">
            <span class="big"></span>
            <span class="a2"></span>
            <span class="a3"></span>
        </p>
        <b class="glyphicon glyphicon-menu-right" style="right:0px;" id="rigjt"></b>
    </div>

    <script>
        $("#lunbo").hover(function () {
            $(this).find("b").fadeToggle();;
        }), function () {
            $(this).find("b").fadeToggle();;
        };

        $("#left").click(function () {

            //      alert($(".yy_dian span:eq(" + dian + ")").attr("class"));
            var dian = $("#huahua").attr("data-data");
            if (dian == 0) {
                dian = 3;
            }
            dian--;
            $("#huahua").attr("data-data", dian);
            $(".yy_dian span").attr("class", "");
            $(".yy_dian span:eq(" + dian + ")").attr("class", "big");
            $("#huahua").animate({
                marginLeft: "-600px"
            },
               500,
               function () {
                   $("#huahua").css({
                       marginLeft: "-300px"
                   }).find("li:first").appendTo("#huahua");
               });
        });


        $("#rigjt").click(function () {
            var dian = $("#huahua").attr("data-data");
            if (dian == 2) {
                dian = -1;
            }
            dian++;
            $("#huahua").attr("data-data", dian);
            $(".yy_dian span").attr("class", "");
            $(".yy_dian span:eq(" + dian + ")").attr("class", "big");
            $("#huahua").animate({
                marginLeft: "0px"
            },
               500,
               function () {
                   $("#huahua").css({
                       marginLeft: "-300px"
                   }).find("li:last").prependTo("#huahua");
               });
        });


    </script>
</body>
</html> 